@model EducaEFRT.Models.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Iniciar sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - EduControl</title>

    <!-- Estilos y Fuentes -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --accent-color: #4895ef;
            --dark-color: #0d3b66;
            --light-color: #f8f9fa;
            --error-color: #f72585;
            --success-color: #4cc9f0;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        body {
            background: linear-gradient(135deg, #f6f8fc 0%, #e8effa 100%);
            display: flex;
            flex-direction: column;
        }

        .gradient-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #f6f8fc 0%, #e8effa 100%);
            background-size: 400% 400%;
            z-index: -1;
            animation: GradientBackground 15s ease infinite;
        }

        /* Definición de keyframes correctamente colocada */
        @@keyframes GradientBackground {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            position: relative;
        }

        /* Efecto de burbujas flotantes */
        .bubbles {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            top: 0;
            left: 0;
            z-index: 0;
        }

        .bubble {
            position: absolute;
            bottom: -100px;
            background: rgba(67, 97, 238, 0.1);
            border-radius: 50%;
        }

        .bubble:nth-child(1) {
            width: 40px;
            height: 40px;
            left: 10%;
            animation: FloatingBubble 16s infinite ease-in;
        }

        .bubble:nth-child(2) {
            width: 20px;
            height: 20px;
            left: 20%;
            animation: FloatingBubble 12s infinite ease-in 1s;
        }

        .bubble:nth-child(3) {
            width: 50px;
            height: 50px;
            left: 35%;
            animation: FloatingBubble 18s infinite ease-in 2s;
        }

        .bubble:nth-child(4) {
            width: 30px;
            height: 30px;
            left: 50%;
            animation: FloatingBubble 14s infinite ease-in 0.5s;
        }

        .bubble:nth-child(5) {
            width: 25px;
            height: 25px;
            left: 65%;
            animation: FloatingBubble 15s infinite ease-in 3s;
        }

        .bubble:nth-child(6) {
            width: 40px;
            height: 40px;
            left: 75%;
            animation: FloatingBubble 17s infinite ease-in 1.5s;
        }

        .bubble:nth-child(7) {
            width: 60px;
            height: 60px;
            left: 85%;
            animation: FloatingBubble 20s infinite ease-in 2.5s;
        }

        /* Definición de keyframes para las burbujas */
        @@keyframes FloatingBubble {
            0% {
                bottom: -100px;
                transform: translateX(0);
            }
            50% {
                transform: translateX(100px);
            }
            100% {
                bottom: 100%;
                transform: translateX(-100px);
            }
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px 35px;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            position: relative;
            z-index: 1;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(5px);
            opacity: 0;
            animation: FadeInUp 0.8s ease-out forwards;
        }

        @@keyframes FadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
            from {
                opacity: 0;
                transform: translateY(20px);
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
            animation: ScaleIn 0.6s ease-out 0.3s forwards;
            opacity: 0;
            transform: scale(0.9);
        }

        @@keyframes ScaleIn {
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .login-header h2 {
            color: var(--dark-color);
            font-weight: 700;
            font-size: 28px;
            margin-bottom: 10px;
            letter-spacing: 0.5px;
        }

        .login-header i {
            font-size: 36px;
            color: var(--primary-color);
            margin-bottom: 15px;
            display: inline-block;
            animation: Pulse 2s infinite;
        }

        @@keyframes Pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .form-group {
            margin-bottom: 20px;
            opacity: 0;
            animation: FadeInRight 0.5s ease-out forwards;
        }

        .form-group:nth-child(1) { animation-delay: 0.5s; }
        .form-group:nth-child(2) { animation-delay: 0.6s; }
        .form-group:nth-child(3) { animation-delay: 0.7s; }
        .form-group:nth-child(4) { animation-delay: 0.8s; }
        .form-group:nth-child(5) { animation-delay: 0.9s; }

        @@keyframes FadeInRight {
            to {
                opacity: 1;
                transform: translateX(0);
            }
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
        }

        /* Resto de tus estilos... (mantén todo lo demás igual) */

        .validation-summary-errors {
            animation: Shake 0.5s ease;
        }

        @@keyframes Shake {
            0%, 100% { transform: translateX(0); }
            20%, 60% { transform: translateX(-5px); }
            40%, 80% { transform: translateX(5px); }
        }

        /* Responsive */
        @@media (max-width: 576px) {
            .login-container {
                padding: 30px 20px;
                margin: 0 15px;
            }

            .login-header h2 {
                font-size: 24px;
            }
        }

        .btn-login {
    background: linear-gradient(90deg, var(--primary-color) 0%, var(--accent-color) 100%);
    color: #fff;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    padding: 12px 0;
    width: 100%;
    font-size: 18px;
    box-shadow: 0 4px 16px rgba(67, 97, 238, 0.10);
    transition: background 0.3s, transform 0.2s, box-shadow 0.2s;
    position: relative;
    overflow: hidden;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.btn-login:hover, .btn-login:focus {
    background: linear-gradient(90deg, var(--secondary-color) 0%, var(--primary-color) 100%);
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 8px 24px rgba(67, 97, 238, 0.18);
    outline: none;
}

.btn-login:active {
    transform: scale(0.98);
    box-shadow: 0 2px 8px rgba(67, 97, 238, 0.10);
}

.btn-login i {
    font-size: 22px;
    margin-right: 6px;
    animation: btnIconPulse 1.5s infinite;
}

@@keyframes btnIconPulse {
    0%, 100% { transform: scale(1);}
    50% { transform: scale(1.18);}
}

    </style>
</head>
<body>
    <div class="gradient-bg"></div>
    <div class="wrapper">
        <!-- Burbujas animadas de fondo -->
        <div class="bubbles">
            <div class="bubble"></div>
            <div class="bubble"></div>
            <div class="bubble"></div>
            <div class="bubble"></div>
            <div class="bubble"></div>
            <div class="bubble"></div>
            <div class="bubble"></div>
        </div>

        <div class="content">
            <div class="login-container">
                <div class="login-header">
                    <i class="bi bi-journal-bookmark-fill"></i>
                    <h2>EduControl</h2>
                </div>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nombre de usuario" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "field-validation-error" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                    </div>

                    <div class="remember-me-wrapper">
                        <div class="remember-me">
                            @Html.CheckBoxFor(m => m.RememberMe, new { id = "rememberMe" })
                            <label for="rememberMe">Recordarme</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-login">
                        <i class="bi bi-box-arrow-in-right"></i> INGRESAR
                    </button>


                    <div class="forgot-password text-center mt-3">
                        @Html.ActionLink("¿Olvidaste tu contraseña?", "ForgotPassword", new { }, new { @class = "text-decoration-none" })
                    </div>

                }
            </div>
        </div>

        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema EduControl</p>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            // Efecto al enviar el formulario
            $('form').submit(function (e) {
                if ($(this).valid()) {
                    $('.btn-login').html('<i class="bi bi-arrow-repeat"></i> CARGANDO...');
                    $('.btn-login').prop('disabled', true);
                }
            });
        });
    </script>
</body>
</html>