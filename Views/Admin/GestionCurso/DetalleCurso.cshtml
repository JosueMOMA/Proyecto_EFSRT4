@model EducaEFRT.Models.ViewModels.CursoInfoViewModel

@{
    ViewData["Title"] = "Información de Curso";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduControl</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#4361ee',
                        'secondary': '#3f37c9',
                        'accent': '#4895ef',
                        'dark': '#0d3b66',
                        'light': '#f8f9fa',
                        'primary-light': '#eef2ff',
                        'text-main': '#334155',
                        'text-secondary': '#64748b'
                    },
                    fontFamily: {
                        'poppins': ['Poppins', 'sans-serif']
                    }
                }
            }
        }
    </script>

    <style>
        .bg-gradient-custom {
            background: linear-gradient(135deg, #f6f8fc 0%, #e8effa 100%);
        }
    </style>
</head>

<body class="font-poppins bg-gradient-custom text-text-main min-h-screen">
    <div class="w-full max-w-4xl mx-auto p-6">
        <!-- Header -->
        <header class="flex justify-between items-center mb-8 pb-4 border-b border-gray-200">
            <div class="flex items-center gap-4">
                <a href="@Url.Action("GestionCurso", "Admin")" class="text-primary hover:text-secondary transition-colors" title="Volver a la lista">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <div>
                    <h1 class="text-3xl font-bold text-dark m-0">INFORMACIÓN DE CURSO</h1>
                    <p class="text-text-secondary m-0">Detalles del curso seleccionado</p>
                </div>
            </div>
        </header>

        <!-- Contenido principal -->
        <main class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">

            <!-- Sección de Información del Curso -->
            <section>
                <h2 class="text-xl font-semibold text-text-secondary mt-0 mb-8 border-l-4 border-primary pl-4">
                    Datos del Curso
                </h2>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Información -->
                    <div class="lg:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-text-secondary">Nombre del curso</label>
                            <p class="text-lg text-text-main">@Model.NombreCurso</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Duración (horas)</label>
                            <p class="text-lg text-text-main">@Model.DuracionHoras</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Nivel</label>
                            <p class="text-lg text-text-main">@Model.Nivel</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Certificación</label>
                            <p class="text-lg text-text-main">
                                @(Model.Certificacion ? "Sí" : "No")
                            </p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Precio (S/.)</label>
                            <p class="text-lg text-text-main">@Model.Precio.ToString("F2")</p>
                        </div>
                    </div>

                    <!-- Imagen del curso -->
                    <div class="lg:col-span-1 flex flex-col items-center">
                        <div class="w-full max-w-[250px] aspect-square rounded-lg overflow-hidden border-4 border-white shadow-lg">
                            @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                            {
                                <img src="@Model.ImagenUrl" alt="Imagen del curso" class="w-full h-full object-cover">
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center bg-primary-light text-primary text-6xl font-bold">
                                    @Model.NombreCurso.Substring(0, 1).ToUpper()
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </section>

            <!-- Botón de acción -->
            <div class="mt-10 pt-6 border-t border-gray-200 flex justify-end">
                <a href="@Url.Action("GestionCurso", "Admin")" class="bg-white border border-gray-300 text-text-main px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-300">
                    Cerrar
                </a>
            </div>
        </main>
    </div>
</body>
</html>
