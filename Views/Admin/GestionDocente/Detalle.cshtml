@model EducaEFRT.Models.Docente
@using EducaEFRT.Models.ViewModels

@{
    ViewData["Title"] = "Información de Docente";
    var asignaciones = ViewBag.CursosAsignados as List<AsignacionViewModel> ?? new List<AsignacionViewModel>();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduControl</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#4361ee',
                        'secondary': '#3f37c9',
                        'accent': '#4895ef',
                        'dark': '#0d3b66',
                        'light': '#f8f9fa',
                        'primary-light': '#eef2ff',
                        'text-main': '#334155',
                        'text-secondary': '#64748b'
                    },
                    fontFamily: {
                        'poppins': ['Poppins', 'sans-serif']
                    }
                }
            }
        }
    </script>

    <style>
        .bg-gradient-custom {
            background: linear-gradient(135deg, #f6f8fc 0%, #e8effa 100%);
        }
    </style>
</head>
<body class="font-poppins bg-gradient-custom text-text-main min-h-screen">
    <div class="w-full max-w-5xl mx-auto p-6">
        <!-- Header -->
        <header class="flex justify-between items-center mb-8 pb-4 border-b border-gray-200">
            <div class="flex items-center gap-4">
                <a href="@Url.Action("GestionDocente", "Admin")" class="text-primary hover:text-secondary transition-colors" title="Volver a la lista">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <div>
                    <h1 class="text-3xl font-bold text-dark m-0">INFORMACIÓN DE DOCENTE</h1>
                    <p class="text-text-secondary m-0">Detalles del profesor seleccionado</p>
                </div>
            </div>
        </header>

        <!-- Contenido Principal -->
        <main class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">

            <!-- Sección de Datos Personales -->
            <section>
                <h2 class="text-xl font-semibold text-text-secondary mt-0 mb-8 border-l-4 border-primary pl-4">
                    Datos Personales
                </h2>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Columna de Información -->
                    <div class="lg:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                        <div>
                            <label class="block text-sm font-medium text-text-secondary">DNI</label>
                            <p class="text-lg text-text-main">@Model.Dni</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Nombre(s)</label>
                            <p class="text-lg text-text-main">@Model.Nombres</p>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-text-secondary">Apellido(s)</label>
                            <p class="text-lg text-text-main">@Model.Apellidos</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Correo Electrónico</label>
                            <p class="text-lg text-text-main break-words">@Model.Correo</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Celular</label>
                            <p class="text-lg text-text-main">@Model.Celular</p>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-text-secondary">Dirección</label>
                            <p class="text-lg text-text-main">@Model.Direccion</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Profesión</label>
                            <p class="text-lg text-text-main">@Model.Profesion</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-text-secondary">Grado Académico</label>
                            <p class="text-lg text-text-main">@Model.GradoAcademico</p>
                        </div>
                    </div>

                    <!-- Columna de Imagen -->
                    <div class="lg:col-span-1 flex flex-col items-center">
                        <div class="w-full max-w-[250px] aspect-square rounded-lg overflow-hidden border-4 border-white shadow-lg flex items-center justify-center bg-gray-100 text-primary">
                            @if (!string.IsNullOrEmpty(Model.Foto))
                            {
                                <img src="@Url.Content(Model.Foto)" alt="Foto de perfil del docente" class="w-full h-full object-cover" />
                            }
                            else
                            {
                                var nombres = Model.Nombres?.Split(' ');
                                var apellidos = Model.Apellidos?.Split(' ');
                                var inicialNombre = (nombres != null && nombres.Length > 0) ? nombres[0][0].ToString().ToUpper() : "";
                                var inicialApellido = (apellidos != null && apellidos.Length > 0) ? apellidos[0][0].ToString().ToUpper() : "";
                                var iniciales = inicialNombre + inicialApellido;

                                <span class="text-6xl font-bold">@iniciales</span>
                            }
                        </div>

                    </div>
                </div>
            </section>

            <!-- Sección de Cursos Asignados -->
            <section class="mt-10 pt-6 border-t border-gray-200">
                <h2 class="text-xl font-semibold text-text-secondary mt-0 mb-8 border-l-4 border-primary pl-4">
                    Cursos Asignados (@asignaciones.Count)
                </h2>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">Curso</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">Sección</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">Turno</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">Fecha de inicio</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">Fecha de fin</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @if (asignaciones.Any())
                            {
                                foreach (var item in asignaciones)
                                {
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-main">
                                            @(!string.IsNullOrEmpty(item.CursoNombre) ? item.CursoNombre : "-")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                                            @(!string.IsNullOrEmpty(item.SeccionNombre) ? item.SeccionNombre : "-")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                                            @(!string.IsNullOrEmpty(item.TurnoNombre) ? item.TurnoNombre : "-")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                                            @item.FechaInicio.ToString("dd/MM/yyyy")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                                            @item.FechaFin.ToString("dd/MM/yyyy")
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="px-6 py-4 text-center text-sm text-text-secondary">
                                        No tiene cursos asignados
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </section>

            <!-- Botón de Acción -->
            <div class="mt-10 pt-6 border-t border-gray-200 flex justify-end">
                <a href="@Url.Action("GestionDocente", "Admin")" class="bg-white border border-gray-300 text-text-main px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-300">
                    Cerrar
                </a>
            </div>
        </main>
    </div>
</body>
</html>
